<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.mahmoud.quizapp.MainActivity"
    android:orientation="vertical"
    android:background="@color/backGround"
    >


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/score"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Score"
        android:textColor="@color/colorOfText"

        />

    <TextView
        android:id="@+id/question"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/question_1"
        android:textColor="@color/colorOfText"
        android:textSize="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@id/score"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/mButtonTrue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/trueButton"
            android:text="@string/trueAnswer"
            android:textColor="@color/colorOfText" />

        <Button
            android:id="@+id/mButtonFalse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@color/falseButton"
            android:text="@string/falseAnswer"
            android:textColor="@color/colorOfText" />

    </LinearLayout>

</RelativeLayout>
